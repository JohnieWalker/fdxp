{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    <title>FDXP - High Speed Fuel</title>
{% endblock %}

{% block body %}
    <div class="col-md-9">
        <h1>High Speed Fuel list</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>DATE</th>
                    <th>FLT NO</th>
                    <th>DEP-DEST</th>
                    <th>FLT TIME</th>
                    <th>REV. FLT TIME</th>
                    <th>COST INC</th>
                    <th>REV. COST</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{% if entity.date %}{{ entity.date|date('dM')|upper }}{% endif %}</td>
                    <td>{{ entity.flightNumber }}</td>
                    <td>{{ entity.depIATA }}-{{ entity.destIATA }}</td>
                    <td>{% if entity.normalFlightTime %}{{ entity.normalFlightTime|date("H:i") }}{% endif %}</td>
                    <td>{% if entity.highSpeedFlightTime %}{{ entity.highSpeedFlightTime|date("H:i") }}{% endif %}</td>
                    <td>{{ entity.normalCost }}</td>
                    <td>{{ entity.highSpeedCost }}</td>
                    <td>
                        <a href="{{ path('highspeedfuel_edit', { 'id': entity.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('highspeedfuel_new') }}" class="btn btn-primary btn">
            New entry
        </a>
    </div>

    {% endblock %}
