{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    <title>FDXP - Route Comparisons</title>
{% endblock %}

{% block body %}
        <!--{{ knp_menu_render('comparison_menu',
        { 'style' : 'breadcrumb', 'template' : 'AppBundle:Menu:mybootstrap.html.twig'}) }}-->
        <div class="col-md-6">
            <h1>List of existing comparisons</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th><span class="glyphicon glyphicon-th-list"></span> Show details</th>
                    <th>Edit name / Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td><a href="{{ path('compare_case', { 'comp_id': entity.id }) }}">Show details</a></td>
                        <td>
                                    <a href="{{ path('compare_edit', { 'id': entity.id }) }}">Edit name / Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('compare_new') }}" class="btn btn-primary btn">
                Create new comparison
            </a>
        </div>

{% endblock %}
