{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    {{ knp_menu_render('comparison_menu', { 'style' : 'breadcrumb', 'template' : 'AppBundle:Menu:mybootstrap.html.twig'}) }}
    <div class="col-md-6">

    <h1>Comparison cases</h1>

    <table class="table">
        <thead>
                <th>Name</th>
                <th>Basic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.basic }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('comparison_case_calc', { 'case_id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('compare_case_edit', { 'id': entity.id, 'comp_id' : app.request.get('comp_id') }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('compare_case_new', { 'comp_id': app.request.get('comp_id') }) }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
