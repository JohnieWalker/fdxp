{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ComparisonCase</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Basic</th>
                <td>{{ entity.basic }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('compare_case', { 'comp_id' : app.request.get('comp_id') }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('compare_case_edit', { 'id': entity.id, 'comp_id': app.request.get('comp_id') }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
